if [[ "$OS" == *Windows* ]] ; then
    npm install -g jake jshint@0.5.2 csslint@0.9.7 uglify-js
else
    sudo npm install -g jake jshint@0.5.2 csslint@0.9.7 uglify-js
fi
npm install jasmine-node express wrench@1.3.6 jWorkflow mustache node-zip node-native-zip
if [ "$1" != "-scm" ]; then 
    git submodule update --init;
fi
if [ ! -e ./dependencies/webplatform/framework ]; then
    echo "Fail: git submodule update (dependencies/webplatform/framework)"
    exit 1
fi
cd ./dependencies/webplatform/framework;
if [[ "$OS" == *Windows* ]]; then
    source configure;
else
    ./configure
fi
jake;
